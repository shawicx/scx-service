# 应用配置
NODE_ENV=development
PORT=3000

# 数据库配置 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=scx
DB_PASSWORD=your_secure_password_here
DB_DATABASE=scx-service

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6388
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# 邮件配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@example.com

# Swagger 文档配置
SWAGGER_TITLE=Shawbox Service API
SWAGGER_DESCRIPTION=Shawbox Service API Documentation
SWAGGER_VERSION=1.0

# AI 模块配置
AI_DEFAULT_PROVIDER=copilot
AI_TIMEOUT=30000
AI_CACHE_TTL=3600
AI_ENABLE_CACHE=true
AI_MAX_TOKENS_LIMIT=4096

# AI 监控配置
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false
AI_LOG_TOKENS=true

# GitHub Copilot 配置
COPILOT_BASE_URL=https://api.githubcopilot.com
COPILOT_MODEL=gpt-4

# GLM (智谱AI) 配置
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_MODEL=glm-4

# Qwen (阿里通义千问) 配置
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QWEN_MODEL=qwen-turbo
